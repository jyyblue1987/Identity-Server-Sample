@{
    ViewBag.Title = "Home Page";

    string roles = "";
    if (Request.Cookies["Profile"] != null)
    {
        if (Request.Cookies["Profile"]["roles"] != null)
        {
            roles = Request.Cookies["Profile"]["roles"]; 
        }
    }

}

<div class="jumbotron">
    <h1>Identity Server 3</h1>
    <p class="lead">OpenID Connect Form Post Example Client</p>
</div>

<div class="row">
    <div class="col-md-10">
        <h3>Identity</h3>
        
        @if (User.Identity.IsAuthenticated)
        {
            <p>
                <dl>
                    @foreach (var claim in System.Security.Claims.ClaimsPrincipal.Current.Claims)
                    {
                        <dt>@claim.Type</dt>
                        <dd>@claim.Value</dd>
                    }
                    <dt>Roles</dt>
                    <dd>@roles</dd>                   
                </dl>
            </p>
             
        }
        else
        {
            <p>
                anonymous.
            </p>
        }
    </div>
</div>